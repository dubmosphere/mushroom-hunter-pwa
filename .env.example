# Mushroom Hunter PWA - Docker Environment Configuration
# Copy this file to .env and update with your values

# === Port Configuration ===
FRONTEND_PORT=5173
BACKEND_PORT=5000
DB_PORT=5433

# === Backend Configuration ===
NODE_ENV=production

# === Database Configuration ===
DB_NAME=mushroom_hunter
DB_USER=postgres
DB_PASSWORD=change_this_secure_password

# === JWT Configuration ===
JWT_SECRET=change_this_to_a_very_secure_random_string_in_production
JWT_EXPIRES_IN=7d

# === CORS Configuration ===
# Add your frontend URLs here (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173

# === Frontend Configuration ===
# API URL for the frontend to connect to backend
VITE_API_URL=http://localhost:5000
