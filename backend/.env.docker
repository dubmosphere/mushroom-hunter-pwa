# Docker Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# Note: DB_HOST is set to 'db' in docker-compose.yml to connect to the postgres container
# DB_PORT is the external host port (5433 to avoid conflict with local postgres on 5432)
# The container internally uses 5432
DB_NAME=mushroom_hunter
DB_USER=postgres
DB_PASSWORD=change_this_secure_password
DB_PORT=5433

# JWT Configuration
JWT_SECRET=change_this_to_a_very_secure_random_string_in_production
JWT_EXPIRES_IN=7d

# CORS - Add your frontend URLs here
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
